class _module:
	def _import(s):
		from pathlib import Path
		n=s.n
		mn=n.replace('___','.')
		if mn=='.':
			from subprocess import run
			from subprocess import PIPE
			try:
				s=run(['pip3','freeze'],stdout=PIPE)
			except:
				s=run(['pip3','freeze'],stdout=PIPE)
			s=s.stdout.decode()
			s=[w.split('==')[0] for w in s.split('\n')]
			for w in s:
				try:
					w=eval('modules.'+w+'._')
				except:
					pass
			return
		try:
			exec('import '+mn)
			m=eval(mn)
		except:
			m=None
		try:
			ms=open(str(Path.home())+'/.python_modules_db').read().split()
		except:
			ms=[]
		if n in ms and m==None:
			ms=[w for w in ms if w!=n]
		if n not in ms and m!= None:
			ms.append(n)
		open(str(Path.home())+'/.python_modules_db','w').write(' '.join(ms))
		exec('import '+mn)
		return eval(mn)
	def __init__(s,n=None):
		from pathlib import Path
		if n!=None:
			s.n=n
		else:
			try:
				_db=open(str(Path.home())+'/.python_modules_db').read().split()
			except:
				_db=[]
			for w in _db:
				exec('s.'+w+'=_module(w)')
	def __getattr__(s,n):
		if n=='_':
			return s._import()
		exec('s.'+n+'=_module(n)')
		return eval('s.'+n)
modules=_module()
